@model internPJ3.Web.Models.Product.ProductModel

@{
	ViewBag.Title = L("ProductList");
	ViewBag.ActiveMenu = "ProductList"; //Matches with the menu name in SimpleTaskAppNavigationProvider to highlight the menu item
}

<h2>@L("ProductList")</h2>

@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Product/index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Product/Index.min.js" asp-append-version="true"></script>
	</environment>
}

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">

							<div class="col-md-6">
								<form id="searchForm" class="d-flex mx-3 flex-grow-1 justify-content-center" style="max-width: 80%;">
									<input name="searchString" id="searchInput" class="form-control me-2" type="search" placeholder="@L("Placeholder")" aria-label="Search"
												 style="border-radius: 0; height: 40px; flex: 1;">
									<button class="btn" type="submit" id="searchButton" style="border-radius: 0; background-color: #007BFF ; color: white; height: 40px; width: 40px;">
										<i class="fa fa-search"></i>
									</button>
								</form>
							</div>


			






							<div class="col-md-4">
								<a href="javascript:;" data-toggle="modal" data-target="#ProductCreateModal" class="btn bg-blue float-sm-right">
									<i class="fa fa-plus-square"></i>
									@L("Create")
								</a>
							</div>


						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="ProductsTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th style="width: 250px">@L("Product Name")</th>
										<th>@L("Product Description")</th>
										<th>@L("Category Name")</th>
										<th style="width: 70px;">@L("Buy Able?")</th>
										<th style="width: 70px;">@L("Quantity")</th>
										<th style="width: 230px; text-align: center;">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@await Html.PartialAsync("~/Views/Product/_CreateModal.cshtml", Model)

<div class="modal fade" id="ProductEditModal" tabindex="-1" role="dialog" aria-labelledby="ProductEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>

<div class="modal fade" id="ProductDetailsModal" tabindex="-1" role="dialog" aria-labelledby="ProductEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>


