@model internPJ3.Web.Models.Category.CategoryModel

@{
	ViewBag.Title = L("CategoryList");
	ViewBag.ActiveMenu = "CategoryList"; 
}

<h2>@L("CategoryList")</h2>

@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Category/index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Category/Index.min.js" asp-append-version="true"></script>
	</environment>
}

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								@await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")
							</div>


							<div class="col-md-4">
								<a href="javascript:;" data-toggle="modal" data-target="#CategoryCreateModal" class="btn bg-blue float-sm-right">
									<i class="fa fa-plus-square"></i>
									@L("Create")
								</a>
							</div>


						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="CategoryTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th style="width: 250px">@L("Category Name")</th>
										<th>@L("Category Description")</th>
										<th style="width: 230px; text-align: center;">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@await Html.PartialAsync("~/Views/Category/_CreateModal.cshtml", Model)

<div class="modal fade" id="CategoryEditModal" tabindex="-1" role="dialog" aria-labelledby="CategoryEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>

