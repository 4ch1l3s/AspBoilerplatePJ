							<input type="text" class="form-control" name="CategoryName" required maxlength="256" minlength="2">
						</div>
					</div>

					<div class="form-group row required">
						<label class="col-md-3 col-form-label">@L("CategoryDescription")</label>
						<div class="col-md-9">
							<input type="text" class="form-control" name="CategoryDescription" required maxlength="@AbpUserBase.MaxNameLength">
