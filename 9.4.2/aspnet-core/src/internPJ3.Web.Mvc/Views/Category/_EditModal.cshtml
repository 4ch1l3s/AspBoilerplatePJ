@using Abp.Authorization.Users
@using internPJ3.Web.Models.Common.Modals
@using internPJ3.Web.Models.Category
@model CategoryEditModel // Xác định kiểu dữ liệu của Model View sẽ sử dụng
@{
  Layout = null; //Không sử dụng Layout chung
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCategory")))
<form name="CategoryEditForm" role="form" class="form-horizontal">
  <input type="hidden" name="Id" value="@Model.CategoryEditDto.Id" />
  <div class="modal-body">
      

    <div class="tab-content mt-4">
      <div role="tabpanel" class="tab-pane container active" id="edit-Category-details">


        <div class="form-group row required">
          <label class="col-md-3 col-form-label" for="Categoryname">@L("CategoryName")</label>
          <div class="col-md-9">
            <input id="CategoryName" type="text" class="form-control" name="CategoryName" value="@Model.CategoryEditDto.CategoryName" required maxlength="@AbpUserBase.MaxUserNameLength" minlength="2">
          </div>
        </div>


        <div class="form-group row required">
          <label class="col-md-3 col-form-label" for="CategoryDescription">@L("CategoryDescription")</label>
          <div class="col-md-9">
            <input id="CategoryDescription" type="text" class="form-control" name="CategoryDescription" value="@Model.CategoryEditDto.CategoryDescription" required maxlength="@AbpUserBase.MaxNameLength">
          </div>
        </div>



      </div>


    </div>

  </div>

  @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Category/_EditModal.js" asp-append-version="true"></script>
