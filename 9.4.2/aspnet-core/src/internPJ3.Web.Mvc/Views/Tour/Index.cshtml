@model internPJ3.Web.Models.Tour.TourModel


@{
	ViewBag.Title = L("Tour"); 
	ViewBag.ActiveMenu = "Tour"; //Matches with the menu name in SimpleTaskAppNavigationProvider to highlight the menu item
}

<h2>@L("TourList")</h2>



@section scripts 
{
	<environment names="Development">
		<script src="~/view-resources/Views/Tour/index.js" asp-append-version="true"></script> 
	</environment>

	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Tour/Index.min.js" asp-append-version="true"></script>
	</environment>
}

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								<form>
									<input name="searchString" id="searchInput" class=" form-control me-1" placeholder=@L("Search") type="search" arial-label="Search" />
									<button class=" btn bg-blue" type="submit" id="searchButton">@L("Search")</button>
									<input type="hidden" id="trashBoxInput" name="trashBox" value="true">
									<button type="button" id="trashBox">rác</button>
								</form>
								
							</div>

							<div class="col-md-1">
								<a href="javascript:;" data-toggle="modal" data-target="#TourCreateModal" class="btn bg-blue float-sm-right">
									<i class="fa fa-plus-square"></i>
									@L("Create")
								</a>
							</div>

	
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="TourTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th>@L("TourName")</th>
										<th>@L("GroupSize")</th>
										<th>@L("TourType")</th>
										<th>@L("Date")</th>
										<th style="text-align: center;">@L("Transportation")</th>
										<th style="text-align: center;">@L("TourPrice")</th>
										<th>@L("PhoneNumber")</th>
										<th>@L("Description")</th>
										<th>@L("Attachment")</th>
										<th style="width: 150; text-align: center;">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@await Html.PartialAsync("~/Views/Tour/_CreateModal.cshtml", Model) 

<div class="modal fade" id="TourUpdateModal" tabindex="-1" role="dialog" aria-labelledby="TourUpdateModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>
